<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    app:cardBackgroundColor="@color/white"
    app:contentPadding="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    tools:context=".ui.adapter.CopyAdapter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/item_send_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="郑州市金水区"
                        android:textColor="@color/textColor"
                        android:textSize="13dp" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/jiantou"/>
                    <TextView
                        android:id="@+id/item_pick_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="西安市雁塔区"
                        android:textColor="@color/textColor"
                        android:textSize="13dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单号："
                        android:textColor="@color/textColor"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/item_order_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="西安市雁塔区"
                        android:textColor="@color/textColor"
                        android:textSize="13dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="重量："
                        android:textColor="#666666"
                        android:textSize="11dp" />
                    <TextView
                        android:id="@+id/item_order_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1吨"
                        android:textColor="#666666"
                        android:textSize="11dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="件数："
                        android:textColor="#666666"
                        android:textSize="11dp" />
                    <TextView
                        android:id="@+id/item_order_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1件"
                        android:textColor="#666666"
                        android:textSize="11dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="体积："
                        android:textColor="#666666"
                        android:textSize="11dp" />
                    <TextView
                        android:id="@+id/item_order_volume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8方"
                        android:textColor="#666666"
                        android:textSize="11dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_paly_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/item_head_img"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_head_placeholder"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_bg"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    android:text="电话联系"/>

            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>